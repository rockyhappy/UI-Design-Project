<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C0C0C"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/m"
        android:layout_width="96dp"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/wendy"
        android:gravity="center_vertical"
        android:foregroundGravity="top"
        android:lineHeight="80sp"
        android:text="@string/m"
        android:textAppearance="@style/m"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.060000002" />


    <TextView
        android:id="@+id/musicoo"
        android:layout_width="101dp"
        android:layout_height="31dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/wendy"
        android:text="@string/musicoo"
        android:gravity="center"
        android:textAppearance="@style/musicoo"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/m"
        app:layout_constraintStart_toStartOf="@+id/m"
        app:layout_constraintTop_toBottomOf="@+id/m" />

    <TextView
        android:id="@+id/login"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppins"
        android:gravity="center_horizontal|top"
        android:text="@string/login"
        android:textAppearance="@style/login"
        app:layout_constraintEnd_toEndOf="@+id/musicoo"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="@+id/musicoo"
        app:layout_constraintTop_toBottomOf="@+id/musicoo" />

    <TextView
        android:id="@+id/please_ente"
        android:layout_width="312dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:gravity="center_horizontal|top"
        android:text="@string/please_ente"
        android:textAppearance="@style/please_ente"
        android:fontFamily="@font/montserrat"
        app:layout_constraintEnd_toEndOf="@+id/login"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/login"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="312dp"
        android:layout_height="58dp"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/please_ente"
        app:layout_constraintStart_toStartOf="@+id/please_ente"
        app:layout_constraintTop_toBottomOf="@+id/please_ente"
        app:startIconDrawable="@drawable/baseline_mail_24"
        app:startIconTint="@color/white"
        app:hintEnabled="false"
        android:background="@drawable/rectangle_1"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Email"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            style="@style/NoUnderline"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="312dp"
        android:layout_height="58dp"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        app:endIconMode="password_toggle"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@drawable/ic_password_toggle"
        app:startIconDrawable="@drawable/baseline_lock_24"
        app:startIconTint="@color/white"
        android:backgroundTint="@color/white"
        android:background="@drawable/rectangle_1"
        app:hintEnabled="false"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passkey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            style="@style/NoUnderline"
             />


    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="140dp"
        android:layout_height="19dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:text="@string/forgot_pass"
        android:fontFamily="@font/montserrat"
        android:textAppearance="@style/forgot_pass"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout2"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />

    <Button
        android:id="@+id/btn"
        android:layout_width="312dp"
        android:layout_height="48dp"
        android:layout_margin="25dp"
        android:backgroundTint="@color/green"
        android:text="Login"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout2"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout2"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        app:layout_constraintVertical_bias="0.100000024">

    </Button>

    <TextView
        android:id="@+id/don_t_have_"
        android:layout_width="220dp"
        android:layout_height="17dp"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:text="@string/don_t_have_"
        android:textAppearance="@style/don_t_have_"
        app:layout_constraintStart_toStartOf="@+id/btn"
        app:layout_constraintTop_toBottomOf="@+id/btn"
        android:fontFamily="@font/montserrat"/>

    <TextView
        android:id="@+id/sign_up"
        android:layout_width="75dp"
        android:layout_height="19dp"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:text="@string/sign_up"
        android:textAppearance="@style/sign_up"
        app:layout_constraintEnd_toEndOf="@+id/btn"
        app:layout_constraintStart_toEndOf="@+id/don_t_have_"
        app:layout_constraintTop_toBottomOf="@+id/btn"
        android:fontFamily="@font/montserrat"/>


    <LinearLayout
        android:id="@+id/frame_10"
        android:layout_width="225dp"
        android:layout_height="23dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="69dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/btn"
        app:layout_constraintStart_toStartOf="@+id/btn"
        app:layout_constraintTop_toBottomOf="@+id/btn" >


        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/line_drawable" />
        <TextView
            android:id="@+id/or"
            android:layout_width="19dp"
            android:layout_height="23dp"
            android:text="@string/or"
            android:textAppearance="@style/or"
            android:gravity="top"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            />
        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/line_drawable" />




    </LinearLayout>

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="312dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn"
        app:layout_constraintStart_toStartOf="@+id/btn"
        app:layout_constraintTop_toBottomOf="@+id/frame_10"></View>

    <TextView
        android:id="@+id/continue_wi"
        android:layout_width="200dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="top"
        android:text="@string/continue_wi"
        android:textAppearance="@style/continue_wi"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_1"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toTopOf="@+id/rectangle_1"
        android:fontFamily="@font/montserrat"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="28dp"
        android:layout_height="25dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/continue_wi"
        app:layout_constraintEnd_toStartOf="@+id/continue_wi"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toTopOf="@+id/continue_wi"
        app:srcCompat="@drawable/google" />


</androidx.constraintlayout.widget.ConstraintLayout>